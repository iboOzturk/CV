<script>
    function sendMessage() {
        // Kullanıcıdan alınan chatId ve message değerlerini al
        var chatId = "1489077336";
        var message = document.getElementById('message').value;
        var name = document.getElementById('name').value;
        var email = document.getElementById('email').value;
        var subject = document.getElementById('subject').value;

        // Eğer chatId veya message boşsa işlemi durdur
        if (!name || !email || !subject || !message) {
            alert('Lütfen tüm alanları doldurun.');
            return;
        }
        if (confirm("Mesajı göndermek istediğinize emin misiniz?")) {
            fetch('/Profile/SendMessage/?chatId=' + encodeURIComponent(chatId) + '&name=' + encodeURIComponent(name) +
                    '&email=' + encodeURIComponent(email) +
                '&subject=' + encodeURIComponent(subject) + '&message=' + encodeURIComponent(message), {
                method: 'GET' 
            })
            
        }
    }
</script>