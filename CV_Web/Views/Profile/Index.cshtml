@functions
{
    string RepresentSpecialCharacters(string input)
    {
        if (input == null)
            return string.Empty;

        // Özel karakterleri temsil eden harflerle değiştirme
        input = input.Replace("+", "p")
                     .Replace("#", "s")
                     .Replace("-", "d")
                     .Replace("*", "a")
                     .Replace("/", "sl")
                     // Ek özel karakter dönüşümleri buraya ekleyebilirsiniz.
                     ;

        return input;
    }
}

